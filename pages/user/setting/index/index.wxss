/* pages/user/setting/index/index.wxss */
.app-setting{
	background-color:#fff;
}
.setting-item{
	position: relative;
	padding: 15px 15px;
	display: flex;
	align-items: center;
}
.setting-item .img{
	width: 50px;
	height: 50px;
}
.setting-item:before {
	content: " ";
	position: absolute;
	top: 0;
	right:5px;
	height: 1px;
	border-top: 1px solid #D9D9D9;
	color: #D9D9D9;
	transform-origin: 0 0;
	transform: scaleY(0.5);
	left: 5px;
}
.setting-item .label{
	flex:1;
}
.setting-item .name{
	padding-right:13px;
	text-align: right;
}
.cell-link:after {
	content: " ";
	display: inline-block;
	height: 6px;
	width: 6px;
	border-width: 2px 2px 0 0;
	border-color: #c8c8cd;
	border-style: solid;
	transform: matrix(.71,.71,-.71,.71,0,0);
	position: absolute;
	top: 50%;
	margin-top: -4px;
	right:10px;
}